mixin form-tariff()
	+b('form').form-tariff&attributes(attributes)(action="#")
		block
		+e.inner
			+e.row.form__row
				+e('label').label.form__label Имя тарифа
				+e.input-wrapper.form__input-wrapper
					+e('input').input.form__input(type="text", placeholder="Придумайте уникальное название тарифа")
					+e('span').status.form__status
			+e.row.form__row
				+e('label').label.form__label Выбор периода действия
				+e.input-wrapper.form__input-wrapper.form__input-wrapper_select
					+e.input-icon.form__input-icon
						+icon('arrows')
					+e('select').select.form__select
						+e('option').option(selected="selected") Неделя
						+e('option').option Две недели
						+e('option').option Три недели
			+e.row.form__row
				+e('label').label.form__label Стоимость тарифа
				+e.input-wrapper.form__input-wrapper
					+e('input').input.form__input(type="text", placeholder="Введите целочисленную цену тарифа")
					+e('span').status.form__status
		+e.footer.form__footer
			+e('button').button_submit.form__button_submit Создать