include ../form/_file.pug

mixin form-mail()
	+b('form').form-mail&attributes(attributes)(action="#")
		block
		+e.inner
			+e.row.form__row
				+e('label').label.form__label Имя рассылки
				+e.input-wrapper.form__input-wrapper
					+e('input').input.form__input(type="text", placeholder="Придумайте название рассылки", value="Январь — самое время приступить к поиску новой работы!")
					+e('span').status.form__status
			+e.row.form__row
				+e('label').label.form__label Введите переодичночть рассылки
				+e.input-wrapper.form__input-wrapper.form__input-wrapper_select
					+e.input-icon.form__input-icon
						+icon('arrows')
					+e('select').select.form__select
						+e('option').option(selected="selected") Еженедельно
						+e('option').option Ежемесячно
						+e('option').option Ежегодно
			+e.row.form__row
				+e('label').label.form__label Добавьте html файл
				+e.input-wrapper.form__input-wrapper
					+file()
					+file('sucess')
		+e.footer.form__footer
			+e('button').button_submit.form__button_submit Создать
			+e('button').button_link.form__button_link Cохранить аналогичеую смс рассылу