include ../form/_file.pug

mixin blog-form()
	+b('form').blog-form&attributes(attributes)(action="#")
		block
		+e.inner
			+e.row.form__row
				+e('label').label.form__label Название статьи
				+e.input-wrapper.form__input-wrapper
					+e('input').input.form__input(type="text", placeholder="Введите название")
					+e('span').status.form__status
			+e.row.form__row
				+e('label').label.form__label Выберите автора
				+e.input-wrapper.form__input-wrapper.form__input-wrapper_select
					+e.input-icon.form__input-icon
						+icon('arrows')
					+e('select').select.form__select
						+e('option').option(selected="selected") Иван Шипилов
						+e('option').option Иван Шипилов
						+e('option').option Иван Шипилов
			+e.row.form__row
				+e('label').label.form__label Выберите категорию
				+e.input-wrapper.form__input-wrapper.form__input-wrapper_select
					+e.input-icon.form__input-icon
						+icon('arrows')
					+e('select').select.form__select
						+e('option').option(selected="selected") Забота о детях
						+e('option').option Забота о детях
						+e('option').option Забота о детях
			+e.row.form__row
				+e('label').label.form__label Добавьте обложку статии
				+e.input-wrapper.form__input-wrapper
					+e('input').input.form__input(type="text", placeholder="Введите ссылку на изображение")
					+e('span').status.form__status
			+e.row.form__row
				+e('label').label.form__label HTML статьи блога
				+e.input-wrapper.form__input-wrapper
					+e('textarea').input.form__textarea(placeholder="Введите название")
					+e('span').status.form__status
		+e.footer.form__footer
			+e('button').button_submit.form__button_submit.form__button_orange Создать