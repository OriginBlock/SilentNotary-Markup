mixin complaint-list(data)
	+b.complaint-list&attributes(attributes)(action="#")
		block
		+e.top
			+e.title Жалобы
			+e('button').filter-button
				+icon('filter', false).complaint-list__filter-button-ico
		if(data && data.length)
			+e.table-wrap
				+e('table').table
					+e('thead').thead
						+e('th').th ID
						+e('th').th Пользователь
						+e('th').th Жалоба
						+e('th').th Дата
						+e('th').th
					+e('tbody').tbody
						each item, index in data
							if item.class
								- var cl = "complaint__tr_"+item.class
							+e('tr').tr(class=cl)
								+e('td').td_id #{item.id}
								+e('td').td_user
									+e.user
										+e.user-name #{item.user} 
										+e.user-id (#{item.user_id})
								+e('td').td_complaint
									+e.complaint #{item.complaint}
								+e('td').td_date #{item.date}
								+e('td').td_actions
									+e('button').link_edit
										+icon('dots', false).complaint__link-ico
								- cl = ''